<%= link_to "logout", destroy_user_session_path, method: :delete %>
<%= link_to 'Headends', headends_path %>

<h1>Nodes</h1>

<table>
  <thead>
    <tr>
      <th>Node</th>
      <th>Tx Location</th>
      <th>Rx Location</th>
      <th>Headend Location</th>
      <th>Created By</th>
      <th>Date Created</th>
      <th>Last Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.node %></td>
        <td><%= node.txlocation %></td>
        <td><%= node.rxlocation %></td>
        <td><%= node.headend.headend %></td>
        <td><%= node.user.first_name %></td>
        <td><%= node.created_at.strftime("%A, %d %b %Y %l:%M %p")%></td>
        <td><%= node.updated_at.strftime("%A, %d %b %Y %l:%M %p")%></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Delete', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

