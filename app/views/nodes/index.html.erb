<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-8  col-xl-12 ">
    <div class="card border-dark mb-3">
      <div class="card-body">
        <h1 class="docs-title">Nodes</h1>
        <table class="table table-striped">
          <thead class="thead-dark">
            <tr>
              <th scope="col">Node</th>
              <th scope="col">Tx Location</th>
              <th scope="col">Rx Location</th>
              <th scope="col">Headend Location</th>
              <th scope="col">Created By</th>
              <th scope="col">Date Created</th>
              <th scope="col">Last Updated</th>
              <th colspan="3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @nodes.each do |node| %>
              <tr>
                <td><%= node.node %></td>
                <td><%= node.txlocation %></td>
                <td><%= node.rxlocation %></td>
                <td><%= node.headend.headend %></td>
                <td><%= node.user.first_name %></td>
                <td><%= node.created_at.strftime("%A, %d %b %Y %l:%M %p")%></td>
                <td><%= node.updated_at.strftime("%A, %d %b %Y %l:%M %p")%></td>
                <td><%= link_to icon('fas', 'search-plus'), node, class: "btn btn-success btn-sm" %>
                  <%= link_to icon('fas', 'edit'), edit_node_path(node), class: "btn btn-info btn-sm" %>
                  <%= link_to icon('fas', 'trash-alt'), node, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
