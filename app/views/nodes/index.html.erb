<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col align-self-center">
    <div class="card border-info">
      <div class="card-header">
        <h4><%= icon('fas', 'table', 'Nodes') %></h4>
      </div>
      <div class="card-body">
        <table role="datatable" class="table table-striped">
          <thead class="thead-dark">
            <tr>
              <th>Node</th>
              <th>Tx Location</th>
              <th>Rx Location</th>
              <th>Headend</th>
              <th>Created By</th>
              <th>Date Created</th>
              <th>Last Updated</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @nodes.each do |node| %>
              <tr>
                <td><%= node.node %></td>
                <td><%= node.txlocation %></td>
                <td><%= node.rxlocation %></td>
                <td><%= node.headend.headend %></td>
                <td><%= node.user.first_name %></td>
                <td><%= node.created_at.strftime("%m/%d/%Y")%></td>
                <td><%= node.updated_at.strftime("%m/%d/%Y")%></td>
                <td><%= link_to icon('fas', 'search-plus'), node, class: "btn btn-secondary btn-sm" %>
                  <%= link_to icon('fas', 'edit'), edit_node_path(node), class: "btn btn-info btn-sm" %>
                  <%= link_to icon('fas', 'trash-alt'), node, class: "btn btn-dark btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <%= link_to icon('fas', 'plus', 'Add Node'), new_node_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
